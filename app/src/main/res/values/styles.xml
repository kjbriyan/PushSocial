<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorOnBackground</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>
    <style name="ImagePickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="fontFamily">@font/muli_regular</item>
    </style>

    <style name="BottomSheatTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheatStyle</item>
    </style>

    <style name="BottomSheatStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    //clickable

    <style name="clickableBackgroudBorderless">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="clickableBackgroudBorder">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="clickableBorderless">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="clickableBorder">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    //text size

    <style name="fontExtraSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="fontSmall">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="fontNormal">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="fontMedium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="fontLarge">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="fontExtraLarge">
        <item name="android:textSize">22sp</item>
    </style>

    //muli bold

    <style name="muliBoldExtraSmall" parent="fontExtraSmall">
        <item name="fontFamily">@font/muli_bold</item>
    </style>

    <style name="muliBoldSmall" parent="fontSmall">
        <item name="fontFamily">@font/muli_bold</item>
    </style>

    <style name="muliBoldNormal" parent="fontNormal">
        <item name="fontFamily">@font/muli_bold</item>
    </style>

    <style name="muliBoldMedium" parent="fontMedium">
        <item name="fontFamily">@font/muli_bold</item>
    </style>

    <style name="muliBoldLarge" parent="fontLarge">
        <item name="fontFamily">@font/muli_bold</item>
    </style>

    <style name="muliBoldExtraLarge" parent="fontExtraLarge">
        <item name="fontFamily">@font/muli_bold</item>
    </style>

    //muli extra bold

    <style name="muliExtraBoldExtraSmall" parent="fontExtraSmall">
        <item name="fontFamily">@font/muli_extra_bold</item>
    </style>

    <style name="muliExtraBoldSmall" parent="fontSmall">
        <item name="fontFamily">@font/muli_extra_bold</item>
    </style>

    <style name="muliExtraBoldNormal" parent="fontNormal">
        <item name="fontFamily">@font/muli_extra_bold</item>
    </style>

    <style name="muliExtraBoldMedium" parent="fontMedium">
        <item name="fontFamily">@font/muli_extra_bold</item>
    </style>

    <style name="muliExtraBoldLarge" parent="fontLarge">
        <item name="fontFamily">@font/muli_extra_bold</item>
    </style>

    <style name="muliExtraBoldExtraLarge" parent="fontExtraLarge">
        <item name="fontFamily">@font/muli_extra_bold</item>
    </style>

    //muli light

    <style name="muliLightExtraSmall" parent="fontExtraSmall">
        <item name="fontFamily">@font/muli_light</item>
    </style>

    <style name="muliLightSmall" parent="fontSmall">
        <item name="fontFamily">@font/muli_light</item>
    </style>

    <style name="muliLightNormal" parent="fontNormal">
        <item name="fontFamily">@font/muli_light</item>
    </style>

    <style name="muliLightMedium" parent="fontMedium">
        <item name="fontFamily">@font/muli_light</item>
    </style>

    <style name="muliLightLarge" parent="fontLarge">
        <item name="fontFamily">@font/muli_light</item>
    </style>

    <style name="muliLightExtraLarge" parent="fontExtraLarge">
        <item name="fontFamily">@font/muli_light</item>
    </style>

    //muli extra light

    <style name="muliExtraLightExtraSmall" parent="fontExtraSmall">
        <item name="fontFamily">@font/muli_extra_light</item>
    </style>

    <style name="muliExtraLightSmall" parent="fontSmall">
        <item name="fontFamily">@font/muli_extra_light</item>
    </style>

    <style name="muliExtraLightNormal" parent="fontNormal">
        <item name="fontFamily">@font/muli_extra_light</item>
    </style>

    <style name="muliExtraLightMedium" parent="fontMedium">
        <item name="fontFamily">@font/muli_extra_light</item>
    </style>

    <style name="muliExtraLightLarge" parent="fontLarge">
        <item name="fontFamily">@font/muli_extra_light</item>
    </style>

    <style name="muliExtraLightExtraLarge" parent="fontExtraLarge">
        <item name="fontFamily">@font/muli_extra_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>